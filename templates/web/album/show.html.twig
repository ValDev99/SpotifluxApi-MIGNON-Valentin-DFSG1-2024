{% extends 'base.html.twig' %}

{% block title %}album{% endblock %}

{% block body %}
    <h1>Album</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ album.name }}</td>
            </tr>
            <tr>
                <th>ReleasedYear</th>
