        </tbody>
    </table>

    <a href="{{ path('app_web_album_index') }}">back to list</a>

    <a href="{{ path('app_web_album_edit', {'id': album.id}) }}">edit</a>

    {{ include('web/album/_delete_form.html.twig') }}
